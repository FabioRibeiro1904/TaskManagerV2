@model TaskManager.Web.DTOs.RegisterDto

@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6 col-lg-5 col-xl-4">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-plus fa-3x text-success mb-3"></i>
                        <h2 class="fw-bold text-dark">Criar Conta</h2>
                        <p class="text-muted">Preencha os dados abaixo</p>
                    </div>

                    <form asp-action="Register" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="fas fa-user me-2"></i>Nome
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Digite seu nome completo" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Digite seu email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">
                                <i class="fas fa-lock me-2"></i>Senha
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Digite sua senha" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                <i class="fas fa-lock me-2"></i>Confirmar Senha
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirme sua senha" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success btn-lg fw-semibold">
                                <i class="fas fa-user-check me-2"></i>Registrar
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                JÃ¡ tem uma conta? 
                                <a asp-action="Login" class="text-primary text-decoration-none fw-semibold">
                                    Fazer login
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

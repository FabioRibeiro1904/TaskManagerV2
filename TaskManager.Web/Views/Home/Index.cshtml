@{
    ViewData["Title"] = "In√≠cio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="mb-5">
                <i class="fas fa-tasks fa-5x text-primary mb-4"></i>
                <h1 class="display-4 fw-bold text-dark mb-3">Task Manager</h1>
                <p class="lead text-muted mb-4">Gerencie suas tarefas de forma simples e eficiente</p>
            </div>
            
            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-4 py-3">
                    <i class="fas fa-sign-in-alt me-2"></i>Entrar
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg px-4 py-3">
                    <i class="fas fa-user-plus me-2"></i>Criar Conta
                </a>
            </div>
            
            <div class="mt-5">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="feature-item">
                            <i class="fas fa-list-ul fa-2x text-primary mb-3"></i>
                            <h5>Organize Tarefas</h5>
                            <p class="text-muted">Crie e organize suas tarefas por prioridade e status</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="feature-item">
                            <i class="fas fa-chart-line fa-2x text-success mb-3"></i>
                            <h5>Acompanhe Progresso</h5>
                            <p class="text-muted">Monitore o progresso das suas atividades em tempo real</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="feature-item">
                            <i class="fas fa-users fa-2x text-info mb-3"></i>
                            <h5>Trabalhe em Equipe</h5>
                            <p class="text-muted">Colabore com sua equipe de forma eficiente</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.feature-item {
    padding: 1.5rem;
    border-radius: 0.5rem;
    transition: transform 0.2s;
}

.feature-item:hover {
    transform: translateY(-5px);
}
</style>
